
<div class="container">
<div class="col-12">
<h1 class="text-center">Burger</h1>

<h2 class="text-center">Eat Da Burger</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2 class="text-center">Burger Devoured Yay!!!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form text-center">
  <div class="form-group">
    <label  for="ba">Please Order Your Burger!!!</label>
    <input class="form-control" type="text" id="ba" name="name">
  </div>
  <button class="btn btn-success" type="submit">Add a Burger</button>
</form>

</div>
</div>
